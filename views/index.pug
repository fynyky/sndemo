head
  style.
    body {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }
    header {
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
        padding-left: 1rem;
        padding-right: 1rem;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }
    .title {
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        font-size: 2rem;
        color:rgb(29, 161, 242);
    }
    .controls {
        display: flex;
        flex-direction: row;
    }
    .control {
        margin-left: 0.5rem;
    }
    main {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: rgb(29, 161, 242);
    }
    .tweet {
        width: 30rem;
        background-color: white;
        margin-top: 1rem;
        margin-bottom: 1rem;
        padding: 1rem;
        border-radius: 0.5rem;
    }
    form {
        display: flex;
        flex-direction: column;
    }
    textarea {
        margin-bottom: 1rem;
    } 
    input {
        margin-bottom: 1rem;
    }
header
  .title Tweeter
  .controls
    .control Login
    .control Register

main
    .tweet
        form(action="/tweet" method="POST")
            textarea(name="content", rows="3") 
            input(type="text", name="author")
            button(type="submit") Tweet 
    for tweet in tweets
        .tweet
            .content=tweet.content
            small by #{tweet.author}

